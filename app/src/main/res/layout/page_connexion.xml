<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_centerHorizontal="true"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/title_app"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@+id/button_passer_commande"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:text="@string/passer_commande"></Button>

            <Button
                android:id="@+id/button_mes_commandes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mes_commandes"></Button>

            <Button
                android:id="@+id/button_se_deconnecter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/se_deconnecter"></Button>
        </TableRow>
    </TableLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>